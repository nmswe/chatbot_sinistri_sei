      {SHOW_INTRO && !showAfterIntro && (
        <Intro onFinish={() => setShowAfterIntro(true)} />
      )}

      {showAfterIntro && (
        <>
          <Image
            src="/logo.png"
            alt="Logo"
            width={100}
            height={100}
            className="absolute top-5 left-5"
          />
          <ChatBot />
          <Toaster position="bottom-center" />
          {/* 
            <Outro />
          */}
        </>
      )}